<header role="banner" class="fr-header">
  <div class="fr-header__body">
    <div class="fr-container">
      <div class="fr-header__body-row">
        <div class="fr-header__brand fr-enlarge-link">
          <div class="fr-header__brand-top">
            <div class="fr-header__logo">
              <p class="fr-logo"> République
                                <br>Française
              <% link_to passports_path%>
              </p>
            </div>
          </div>
          <div class="fr-header__service">
            <a href="/" title="Fournisseur de Pass sanitaires">
              <p class="fr-header__service-title">Fournisseur de Pass sanitaires</p>
            </a>
              <p class="fr-header__service-tagline">Ministère du wagon</p>
          </div>
        </div>
        <div class="fr-header__tools">
        <div class="fr-header__tools-links">
          <ul class="fr-links-group">
          <% if user_signed_in? %>
           <li class="nav-item dropdown">
             <p class="fr-fi-account-line dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Hi <%= current_user.username %>!</p>
             <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Mon espace", dashboard_path, class: "dropdown-item" %>
               <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
             </div>
           </li>
          <% else %>
          <li>
            <%= link_to "Se connecter", new_user_session_path, class: "fr-link fr-fi-lock-line" %>
          </li>
          <li>
            <%= link_to "S'inscrire", new_user_registration_path, class: "fr-link fr-fi-account-line" %>
          </li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
