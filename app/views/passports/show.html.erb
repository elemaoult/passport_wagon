<div id="show_text" class='container py-3' >  

  <div class='row'>

    <div class='show-card-container'>
      <div class="card-pass mx-4">
          <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-pass-infos">
          <div>
            <div class="d-flex flex-row space-between mb-3">
              <span class="px-3">
                <h4> <%= @passport.country %> </h4>
              </span>
              <span class="px-3">
                <h4> <%= @passport.brand_name %> </h4>
              </span>
              <span class="px-3">
                <h4> <%= @passport.gender %> </h4>
              </span>
            </div>
            <h2>Pass sanitaire</h2>
            <p>Le pass est valable de 11/10/21 à 16/10/21.
                  Nous espérons que vous serez satisfaits de cette location.</p>
          </div>
        <h2 class="card-pass-rating">Ratings</h2>
        </div>
      </div>
     </div>
      <div id="bill" class="fr-card__bill">
        <div class="card-bill text-center" id="bill_child">
          <img src="" class="fr-responsive-img" alt="">
          <div class="">
            <div class="card p-3 rounded">
              <div class="cards">
                <div class="d-flex justify-content-between border-left-2 border-right-2">
                  <strong><td>Début</td></strong>
                  <td><strong>11/10/21</strong></td>
                </div>
                <br>
                <div class="d-flex justify-content-between border-left-2 border-right-2">
                  <td><strong>Fin</strong></td>
                  <td><strong>16/10/21</strong></td>
                </div>
                <br>
                <div class="d-flex justify-content-between border-left-2 border-right-2">
                  <td><strong>Vaccin</strong></td>
                  <td><strong><%= @passport.brand_name %></strong></td>
                </div>
                <br>
                <div class="d-flex justify-content-between border-left-2 border-right-2">
                  <td><strong>Genre</strong></td>
                  <strong><td><%= @passport.gender %></td></strong>
                </div>
              </div>
              <br>
              <div>
                <button class="fr-btn"><%= link_to "Réserver", new_passport_transaction_path(@passport), style:"color:white !important;text-decoration:none; !important"%></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
