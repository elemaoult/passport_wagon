    <div class="formulaire-item">
      <h3>Informations obligatoires sur votre pass</h3>
      <%= f.input :social_security_number, include_blank: false %>
      <%= f.input :country, collection: Passport::COUNTRIES, include_blank: false %>
      <%= f.input :gender, collection: {Male: :Male, Female: :Female, Agender: :Agender, Transgender: :Transgender}, include_blank: false %>
      <%= f.input :brand_name, collection: Passport::VACCINS, include_blank: false %>
      <%= f.input :photo, as: :file, include_blank: false %>
