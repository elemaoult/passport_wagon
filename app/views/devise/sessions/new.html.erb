<h2>Se connecter</h2>

<div class="fr-input-group container">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "fr-label", for: "text-input-text" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "fr-label", for: "text-input-text" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "fr-btn" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
</div>
